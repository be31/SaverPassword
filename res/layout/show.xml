<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="#fff">
    <LinearLayout
            android:orientation="horizontal"
            style="@style/top_bar_style"
            android:gravity="center_vertical|right">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save your password!"
                android:id="@+id/textView"
                android:layout_weight="1" android:textColor="#fff" android:gravity="center_horizontal"/>
        <Button
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:text="Change"
                android:textColor="#ffffffff"
                android:background="@drawable/selector"
                android:id="@+id/btnChange"
                />
        <Button
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:text="Delete"
                android:textColor="#ffffffff"
                android:background="@drawable/selector"
                android:id="@+id/btnDelete"
                />
    </LinearLayout>
    <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:padding="10dp"
            >
    <TextView
            style="@style/tv_style"
            android:text="Site:"
           />
    <TextView
            style="@style/tv_style"
            android:id="@+id/tvUserSite"
            />
    <TextView
            style="@style/tv_style"
            android:text="Login:"/>
    <TextView
            style="@style/tv_style"
            android:id="@+id/tvUserLogin"
            />
    <TextView
            style="@style/tv_style"
            android:text="Password:"/>
    <EditText
            style="@style/tv_style"
            android:id="@+id/etUserPassword"
            android:background="#fff"
            android:inputType="textPassword"
            />
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chbShowPassword2"
            android:checked="false"
            android:textColor="#000"
            android:text="Show Password"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:layout_gravity="left|center_vertical"/>
    </LinearLayout>
</LinearLayout>