<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"

              android:gravity="center_vertical">

    <LinearLayout
            style="@style/top_bar_style">
        <TextView
                style="@style/top_title"
                android:layout_width="60dp"
                android:layout_height="40dp"
                />
    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical" android:background="#fff">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Site:"
                android:id="@+id/textView"
                android:layout_margin="5dp" style="@style/tv_style"/>
        <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etSite"
                android:layout_margin="5dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login:"
                android:id="@+id/textView1"
                android:layout_margin="5dp" style="@style/tv_style"/>
        <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etLogin"
                android:layout_margin="5dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password:"
                android:id="@+id/textView2"
                android:layout_margin="5dp" style="@style/tv_style"/>
        <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etPassword"
                android:inputType="textPassword"
                android:layout_margin="5dp"/>
        <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show password"
                android:id="@+id/chbShowPassword"
                android:layout_margin="5dp"
                android:checked="false" android:textColor="#000"/>
        <Button
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="Save"
                android:id="@+id/btnSave"
                android:layout_margin="5dp" android:background="@drawable/selector" android:textColor="#fff"
                android:textSize="20sp"/>
    </LinearLayout>

</LinearLayout>